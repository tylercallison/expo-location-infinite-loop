{
  "expo": {
    "name": "expo-location-infinite-loop",
    "slug": "expo-location-infinite-loop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tcsoccer2000.expolocationinfiniteloop",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "App requires geolocation to improve the quality of the service",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.tcsoccer2000.expolocationinfiniteloop"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}